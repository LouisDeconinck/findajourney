---
const { title, description, url, categorySlug, imageUrl, imageAlt } =
  Astro.props;
---

<div
  class="flex flex-col rounded-lg shadow-lg overflow-hidden border-transparant border-2 hover:border-teal-800"
>
  <div class="flex-shrink-0">
    <a href={`/findajourney/journeys/${url}`}>
      <img
        class="h-48 w-full object-cover"
        src={`/findajourney/${imageUrl}`}
        alt={`${imageAlt}`}
      />
    </a>
  </div>
  <div class="flex-1 bg-white p-6 flex flex-col justify-between">
    <div class="flex-1">
      <a href={`/findajourney/journeys/${url}`} class="block mt-2">
        <p class="text-xl font-semibold text-gray-900">
          {title}
        </p>
        <p class="mt-3 text-base text-gray-500">
          {description}
        </p>
      </a>
    </div>
  </div>
</div>
