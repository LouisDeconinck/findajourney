---
const {
  title,
  description,
  author,
  authorImg,
  date,
  url,
  category,
  categorySlug,
  episode,
  imageUrl,
  imageAlt,
} = Astro.props;

const formattedDate = new Date(date).toLocaleDateString("en-US", {
  year: "numeric",
  month: "long",
  day: "numeric",
});
---

<div class="flex flex-col rounded-lg shadow-lg overflow-hidden border-transparent border-2 hover:border-teal-800 relative">
  {episode && 
    <div class="absolute top-7 left-7 transform -translate-x-1/2 -translate-y-1/2">
      <div class="flex items-center justify-center h-10 w-10 bg-teal-600 text-white text-xl font-bold rounded-tl-lg rounded-br-3xl pr-1 pb-1">
        {episode}
      </div>
    </div>
  }
  <div class="flex-shrink-0">
    <a href={`/${url}`}>
      <img
        class="h-64 w-full object-cover"
        src={`${imageUrl}`}
        alt={`${imageAlt}`}
      />
    </a>
  </div>
  <div class="flex-1 bg-white p-6 flex flex-col justify-between">
    <a href={`/${url}`} class="block">
    <div class="flex-1">
      <p class="text-sm font-medium text-teal-600">
        <a href={`/journeys/${categorySlug}`} class="hover:underline"
          >{category}</a
        >
      </p>
      <a href={`/${url}`} class="block">
        <p class="text-xl font-semibold text-gray-900 hover:underline">
          {title}
        </p>
        <p class="mt-3 text-base text-gray-500">
          {description}
        </p>
      </a>
    </div>
    <div class="mt-6 flex items-center">
      <div class="flex-shrink-0">
        <span class="sr-only">{author}</span>
        <img
          class="h-10 w-10 rounded-full"
          src={`${authorImg}`}
          alt={`${author}`}
        />
      </div>
      <div class="ml-3">
        <p class="text-sm font-medium text-gray-900">
          {author}
        </p>
        <div class="flex space-x-1 text-sm text-gray-500">
          <time datetime={`${date}`}>{formattedDate}</time>
        </div>
      </div>
    </div>
  </div>
</div>
